<body class="bgusers">

<nav class="nav">
	<ul>
		<li class="elemnav1">
			<h2>Snippets.</h2>
		</li>
		<% if user_signed_in? %>

		<li class="elemnav2 buttonsession">
			<%= link_to "About Snippets", about_path %>
			<%= link_to "#{current_user.name}'s pad", user_path(current_user.id) %>
			<%= link_to "Sign out", destroy_user_session_path, class: 'salir', method: :delete %>
		</li>
		
		<% else %>
		
		<li class="elemnav2 buttonsession">
			<%= link_to "About Snippets", about_path %>
			<%= link_to "Sign in", new_user_session_path, :class => "button" %>
			<%= link_to "Sign up", new_user_registration_path, :class => "button" %>
		</li>
		
		<% end %>

	
	</ul>	

</nav>

<section>
	
<% if user_signed_in? %>

	<div class="newstory">
		<h3><%= current_user.name %>'s pad</h3>
	</div>
	
	<div class="myarea">
		<%= link_to (submit_tag "New Story"), new_story_path, :class => "story" %>
		<br>
		<div>
		<%= link_to "Home", home_path, class: "storylink" %>
		<%= link_to 'Logout', destroy_user_session_path, class: "storylink", method: 'DELETE' %>
		</div>
	</div>

<% else %>

	<h2>Nobody logued in</h2>

<% end %>

</section>
</body>
